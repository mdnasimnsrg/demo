{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": [
        "node_modules/",
        "build/",
        "dist/",
        "public/",
        "src/serviceWorker.js",
        "src/setupTests.js"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "react/jsx-equals-spacing": [
            "error",
            "always"
        ],
        "react/jsx-curly-spacing": [
            "error",
            {
                "when": "always",
                "children": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ]
    }
}